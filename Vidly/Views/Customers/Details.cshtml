@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<text>Membership Type: @Model.MembershipType.Description</text>
<br>
@if (Model.Birthdate.HasValue)
{
    <text>Birthdate: @Model.Birthdate.Value.ToString("dd MMM yyyy")</text>
}


